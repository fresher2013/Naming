<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
    a:layout_width="match_parent"
    a:layout_height="match_parent"
    a:background="@color/transparent"
    a:orientation="vertical"
    a:paddingBottom="@dimen/activity_vertical_margin"
    a:paddingLeft="@dimen/activity_horizontal_margin"
    a:paddingRight="@dimen/activity_horizontal_margin"
    a:paddingTop="@dimen/activity_vertical_margin" >

    <TableLayout
        a:layout_width="match_parent"
        a:layout_height="0dip"
        a:layout_weight="1" >

        <include
            a:id="@+id/row1"
            a:layout_width="match_parent"
            a:layout_height="match_parent"
            a:layout_weight="1"
            layout="@layout/row2" />

        <include
            a:id="@+id/row2"
            a:layout_width="match_parent"
            a:layout_height="match_parent"
            a:layout_weight="1"
            layout="@layout/row2" />

        <include
            a:id="@+id/row3"
            a:layout_width="match_parent"
            a:layout_height="match_parent"
            a:layout_weight="1"
            layout="@layout/row2" />

        <include
            a:id="@+id/row4"
            a:layout_width="match_parent"
            a:layout_height="match_parent"
            a:layout_weight="1"
            layout="@layout/row2" />

        <include
            a:id="@+id/row5"
            a:layout_width="match_parent"
            a:layout_height="match_parent"
            a:layout_weight="1"
            layout="@layout/row2" />

        <include
            a:id="@+id/row6"
            a:layout_width="match_parent"
            a:layout_height="match_parent"
            a:layout_weight="1"
            layout="@layout/row2" />

        <include
            a:id="@+id/row7"
            a:layout_width="match_parent"
            a:layout_height="match_parent"
            a:layout_weight="1"
            layout="@layout/row2" />
    </TableLayout>

    <LinearLayout
        a:layout_width="fill_parent"
        a:layout_height="wrap_content"
        a:orientation="horizontal"
        a:paddingTop="@dimen/activity_vertical_margin" >

        <Button
            a:id="@+id/yes"
            a:layout_width="fill_parent"
            a:layout_height="wrap_content"
            a:gravity="center"
            a:text="next" />
    </LinearLayout>

</LinearLayout>