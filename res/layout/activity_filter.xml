<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
    a:layout_width="fill_parent"
    a:layout_height="fill_parent"
    a:orientation="vertical"
    a:paddingBottom="@dimen/activity_vertical_margin"
    a:paddingLeft="@dimen/activity_horizontal_margin"
    a:paddingRight="@dimen/activity_horizontal_margin"
    a:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        a:id="@+id/min_header"
        a:layout_width="wrap_content"
        a:layout_height="wrap_content"
        a:text="@string/MinStrokeInCharacter" />

    <SeekBar
        a:id="@+id/min_stroke"
        a:layout_width="match_parent"
        a:layout_height="wrap_content" />

    <TextView
        a:id="@+id/max_header"
        a:layout_width="wrap_content"
        a:layout_height="wrap_content"
        a:text="@string/MaxStrokeInCharacter" />

    <SeekBar
        a:id="@+id/max_stroke"
        a:layout_width="match_parent"
        a:layout_height="wrap_content" />

    <TextView
        a:layout_width="match_parent"
        a:layout_height="wrap_content"
        a:text="@string/CharacterTone"
        a:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        a:layout_width="match_parent"
        a:layout_height="wrap_content"
        a:orientation="horizontal"
        a:paddingTop="@dimen/activity_vertical_margin" >

        <CheckBox
            a:id="@+id/tone1"
            a:layout_width="match_parent"
            a:layout_height="wrap_content"
            a:layout_weight="1"
            a:checked="true"
            a:text="@string/Tone1" />

        <CheckBox
            a:id="@+id/tone2"
            a:layout_width="match_parent"
            a:layout_height="wrap_content"
            a:layout_weight="1"
            a:checked="true"
            a:text="@string/Tone2" />
    </LinearLayout>

    <LinearLayout
        a:layout_width="match_parent"
        a:layout_height="wrap_content"
        a:orientation="horizontal"
        a:paddingTop="@dimen/activity_vertical_margin" >

        <CheckBox
            a:id="@+id/tone3"
            a:layout_width="match_parent"
            a:layout_height="wrap_content"
            a:layout_weight="1"
            a:checked="true"
            a:text="@string/Tone3" />

        <CheckBox
            a:id="@+id/tone4"
            a:layout_width="match_parent"
            a:layout_height="wrap_content"
            a:layout_weight="1"
            a:checked="true"
            a:text="@string/Tone4" />
    </LinearLayout>

    <RelativeLayout
        a:id="@+id/pinyin_filter"
        a:layout_width="match_parent"
        a:layout_height="wrap_content"
        a:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            a:id="@+id/text1"
            a:layout_width="match_parent"
            a:layout_height="wrap_content"
            a:text="@string/PreferPinyin"
            a:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            a:id="@+id/text2"
            a:layout_width="match_parent"
            a:layout_height="wrap_content"
            a:layout_below="@id/text1"
            a:paddingLeft="@dimen/activity_horizontal_margin"
            a:paddingRight="@dimen/activity_horizontal_margin" />
    </RelativeLayout>

</LinearLayout>