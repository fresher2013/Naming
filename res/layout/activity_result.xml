<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
    a:layout_width="match_parent"
    a:layout_height="match_parent"
    a:background="@color/transparent"
    a:orientation="vertical"
    a:paddingBottom="@dimen/activity_vertical_margin"
    a:paddingLeft="@dimen/activity_horizontal_margin"
    a:paddingRight="@dimen/activity_horizontal_margin"
    a:paddingTop="@dimen/activity_vertical_margin" >

    <RelativeLayout
        a:layout_width="match_parent"
        a:layout_height="wrap_content"
        a:minHeight="36sp" >
        <TextView
            a:id="@+id/number"
            a:layout_alignParentLeft="true"
            a:layout_alignParentTop="true"
            a:layout_width="wrap_content"
            a:layout_height="wrap_content"/>
        
        
        <TextView
            a:id="@+id/name"
            a:layout_width="fill_parent"
            a:layout_height="wrap_content"
            a:layout_centerInParent="true"
            a:gravity="center"
            a:textSize="32sp" />

        <ImageButton
            a:id="@+id/speak"
            a:layout_width="64dp"
            a:layout_height="64dp"
            a:layout_alignParentRight="true"
            a:paddingRight="@dimen/activity_horizontal_margin"
            a:paddingTop="@dimen/activity_vertical_margin"
            a:scaleType="fitCenter"
            a:src="@drawable/ic_speaker" />
    </RelativeLayout>

    <LinearLayout
        a:layout_width="match_parent"
        a:layout_height="0dip"
        a:layout_weight="1"
        a:orientation="vertical" >

        <TextView
            a:id="@+id/char1"
            a:layout_width="fill_parent"
            a:layout_height="0dip"
            a:layout_weight="1"
            a:gravity="center_vertical"
            a:scrollbars="vertical"
            a:textAppearance="?android:attr/textAppearanceSmall" />

        <View
            a:layout_width="match_parent"
            a:layout_height="1dip"
            a:background="#28ffffff" />

        <TextView
            a:id="@+id/char2"
            a:layout_width="fill_parent"
            a:layout_height="0dip"
            a:layout_weight="1"
            a:gravity="center_vertical"
            a:scrollbars="vertical"
            a:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <LinearLayout
        a:layout_width="fill_parent"
        a:layout_height="wrap_content"
        a:visibility="gone"
        a:orientation="horizontal" >

        <Button
            a:id="@+id/nomorechar1"
            a:layout_width="fill_parent"
            a:layout_height="wrap_content"
            a:layout_weight="1"
            a:gravity="center" />

        <Button
            a:id="@+id/nomorechar2"
            a:layout_width="fill_parent"
            a:layout_height="wrap_content"
            a:layout_weight="1"
            a:gravity="center" />

        <Button
            a:id="@+id/nomore2char"
            a:layout_width="fill_parent"
            a:layout_height="wrap_content"
            a:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        a:layout_width="fill_parent"
        a:layout_height="wrap_content"
        a:orientation="horizontal" >

        <Button
            a:id="@+id/yes"
            a:layout_width="fill_parent"
            a:layout_height="wrap_content"
            a:layout_weight="1"
            a:gravity="center"
            a:text="LIKE" />

        <Button
            a:id="@+id/no"
            a:layout_width="fill_parent"
            a:layout_height="wrap_content"
            a:layout_weight="1"
            a:gravity="center"
            a:text="PASS" />
    </LinearLayout>

</LinearLayout>